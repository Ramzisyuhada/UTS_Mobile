<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragment.Profile">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_gravity="center"
                  android:padding="25dp"
                  android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="75dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/orange">

                       <ImageView
                               android:id="@+id/profileImageView"
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:src="@drawable/ramzi"
                               android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <TextView
                android:layout_gravity="center"
                android:id="@+id/nameTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ramzi"
                android:textSize="24sp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/profileImageView"
                android:layout_marginTop="16dp" />

        <TextView
                android:layout_gravity="center"

                android:id="@+id/bioTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama saya Ramzi, saya berusia 20 tahun dan tinggal di Bandung. Saat ini, saya sedang menempuh pendidikan di ITENAS, jurusan Informatika. Di luar akademik, saya memiliki dua hobi utama yang saya nikmati yaitu bermain game dan mendengarkan musik. Bermain game memberi saya kesempatan untuk merasakan petualangan dan tantangan, sementara mendengarkan musik adalah cara saya bersantai dan mengekspresikan diri. Saya sangat antusias untuk terus belajar dan berkembang dalam dunia teknologi informasi, sambil tetap menikmati waktu luang dengan hobi-hobi saya yang menyenangkan."
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/nameTextView"
                android:layout_marginTop="8dp" />

        <TextView
                android:layout_gravity="center"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quote"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/bioTextView"
                android:layout_marginTop="15dp" />
        <TextView
                android:layout_gravity="center"

                android:id="@+id/quoteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jika kamu tidak sanggup menahan lelahnya belajar maka kamu harus sanggup menahan perihnya kebodohan"
                android:textStyle="italic"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/bioTextView"
                android:layout_marginTop="16dp" />

    </LinearLayout>

</FrameLayout>