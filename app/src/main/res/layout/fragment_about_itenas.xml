<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".Fragment.about_itenas">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="20dp">

        <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                           android:layout_height="wrap_content"
                                           app:cardCornerRadius="5dp"
                                           app:cardElevation="6dp"

        >
            <com.denzcoskun.imageslider.ImageSlider android:layout_width="match_parent"
                                                    android:layout_height="210dp"
                                                    app:iss_auto_cycle="true"
                                                    app:iss_period="2500"
                                                    app:iss_delay="0"
                                                    android:id="@+id/slider"
                                                    tools:ignore="MissingClass"/>

        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="230dp"
                  android:orientation="vertical"
                  android:padding="20dp"

    >
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="About Itenas"
                  android:textStyle="bold"
                  android:textColor="@color/orange"/>

        <Space android:layout_width="match_parent"

               android:layout_height="20dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/sejararah"
                  android:justificationMode="inter_word"
        />

        <Space android:layout_width="match_parent"

               android:layout_height="20dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="Sejarah Itenas"
                  android:textStyle="bold"
                  android:textColor="@color/orange"/>

        <Space android:layout_width="match_parent"

               android:layout_height="20dp"/>

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/sejarah_itenas"
                  android:justificationMode="inter_word"
        />
    </LinearLayout>

</FrameLayout>