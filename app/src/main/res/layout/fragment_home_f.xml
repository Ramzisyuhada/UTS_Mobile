<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:id="@+id/hm"
             tools:context=".Fragment.Home_f">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:orientation="vertical">
        <TextView android:layout_width="match_parent"
                  android:id="@+id/hallo"
                  android:text="Hallo"
                  android:textAlignment="center"
                  android:textSize="28dp"
                  android:layout_height="wrap_content"/>
        <Space android:layout_width="match_parent" android:layout_height="40dp"/>
        <TextView android:layout_width="match_parent"

                  android:text="Graph"
                  android:textSize="28dp"
                  android:textAlignment="center"
                  android:layout_height="wrap_content"/>

        <com.github.aachartmodel.aainfographics.aachartcreator.AAChartView
                android:id="@+id/aa_chart_view"
                android:layout_width="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_height="200dp">
        </com.github.aachartmodel.aainfographics.aachartcreator.AAChartView>
        <Space android:layout_width="match_parent"
               android:layout_height="20dp"/>
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                    android:text="Masukan Nama Siswa"
                    android:id="@+id/matpel"
                    android:textSize="28dp"
                    android:textAlignment="center"/>
        <Space android:layout_width="match_parent" android:layout_height="10dp"/>

        <EditText android:layout_width="200dp"
                  android:layout_gravity="center"
                  android:layout_height="match_parent"
                  android:text=""
                    android:id="@+id/inputnilai"/>

        <Space android:layout_width="match_parent" android:layout_height="20dp"/>

        <androidx.appcompat.widget.AppCompatButton android:layout_width="200dp"
                                                   android:layout_gravity="center"
                                                   android:layout_height="50dp"
                                                   android:text="Tekan"
                                                   android:id="@+id/masukan"/>
        <androidx.appcompat.widget.AppCompatButton android:layout_width="200dp"
                                                   android:layout_gravity="center"
                                                   android:layout_height="50dp"
                                                   android:text="About itenas"
                                                   android:id="@+id/about"/>

        <androidx.appcompat.widget.AppCompatButton android:layout_width="200dp"
                                                   android:layout_gravity="center"
                                                   android:layout_height="50dp"
                                                   android:text="calculator"
                                                   android:id="@+id/calculator"/>
        <androidx.appcompat.widget.AppCompatButton android:layout_width="200dp"
                                                   android:layout_gravity="center"
                                                   android:layout_height="50dp"
                                                   android:text="Logout"
                                                   android:id="@+id/Logout"/>
    </LinearLayout>


</FrameLayout>